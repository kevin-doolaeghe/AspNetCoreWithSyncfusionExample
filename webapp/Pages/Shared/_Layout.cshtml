@{
    var AvailableCultures = new List<object>() {
        new { Id = "en-US", Description = "English" },
        new { Id = "fr-FR", Description = "French" },
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["PageTitle"] - Demo</title>
    <!-- Bootstrap CSS stylesheet -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Syncfusion CSS stylesheet -->
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/22.1.34/fluent.css" />
    <!-- Font Awesome CSS stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Inter font stylesheet -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&display=swap" />
    <!-- Custom CSS stylesheets -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webapp.styles.css" asp-append-version="true" />
    <!-- Syncfusion ASP.NET Core controls scripts -->
    <script src="https://cdn.syncfusion.com/ej2/21.1.35/dist/ej2.min.js"></script>
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light bg-light box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="fa-solid fa-shapes"></i> Demo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarCollapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fa-solid fa-home"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Records/Index">
                                <i class="fa-solid fa-boxes-stacked"></i> Records
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Records/CurrentMonth">
                                <i class="fa-solid fa-calendar"></i> Current month
                            </a>
                        </li>
                        <li class="flex-grow-1">
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="" id="languageSelector" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa-solid fa-language"></i> @Thread.CurrentThread.CurrentUICulture.Name
                            </a>
                            <div class="dropdown-menu" aria-labelledby="languageSelector">
                                <a class="dropdown-item" asp-area="" asp-page="/Language" asp-route-newCulture="en">English</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Language" asp-route-newCulture="fr">Français</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            @if (ViewData["IsLogged"] == null) {
                                <a class="nav-link" asp-area="" asp-page="/Index">
                                    <i class="fa-solid fa-user"></i> Log in
                                </a>
                            } else {
                                <a class="nav-link dropdown-toggle" href="" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa-solid fa-user"></i> My account
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-area="" asp-page="/Settings">
                                        <i class="fa-solid fa-gear"></i> Settings
                                    </a>
                                    <a class="dropdown-item" asp-area="" asp-page="/Index">
                                        <i class="fa-solid fa-right-from-bracket"></i> Log out
                                    </a>
                                </div>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        var currentCulture = "@Context.Request.Query["culture"]";
        console.log("Current culture: " + currentCulture);

        // Load the json culture file
        var ajax = new ej.base.Ajax(location.origin + "/locale/" + currentCulture + ".json", "GET", false);
        ajax.send().then((args) => {
            // Set the culture for the ASP.NET Core controls
            ej.base.setCulture(currentCulture);

            var loader = JSON.parse(args);
            ej.base.L10n.load(loader);
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <ejs-scripts></ejs-scripts>
</body>
</html>
