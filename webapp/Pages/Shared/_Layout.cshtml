<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["PageTitle"] - @Localizer["Title"]</title>
    <!-- Bootstrap CSS stylesheet -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Syncfusion CSS stylesheet -->
    <link rel="stylesheet" href="~/lib/syncfusion/ej2/fluent.css" />
    <!-- Font Awesome CSS stylesheet -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <!-- Font stylesheets -->
    <link rel="stylesheet" href="~/lib/fontsource/inter/index.min.css">
    <link rel="stylesheet" href="~/lib/fontsource/roboto/index.min.css">
    <!-- Custom CSS stylesheet -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Syncfusion ASP.NET Core controls scripts -->
    <script src="~/lib/syncfusion/ej2/dist/ej2.min.js"></script>
</head>
<body>
    <partial name="_HeaderPartial" />

    <div class="container">
        <main role="main">
            @if (ViewData["IsSettingsPage"] == null) {
                @RenderBody()
            } else {
                <div class="row justify-content-center">
                    <div class="col-xl-3">
                        <partial name="_SettingsNavPartial" />
                    </div>
                    <div class="col-xl-5">
                        @RenderBody()
                    </div>
                </div>
            }
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <ejs-scripts></ejs-scripts>
</body>
</html>
