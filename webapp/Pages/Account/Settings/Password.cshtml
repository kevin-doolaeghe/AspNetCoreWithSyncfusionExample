@page
@model PasswordModel
@{
    ViewData["IsSettingsPage"] = true;
    ViewData["PageTitle"] = Localizer["Password"];
    ViewData["ActivePage"] = SettingsNavPages.Password;
}

<div class="container">
    <ejs-breadcrumb id="breadcrumb" cssClass="my-3" enableNavigation="true" maxItems="3" overflowMode="Menu">
        <e-breadcrumb-items>
            <e-breadcrumb-item iconCss="e-icons e-home" url="/"></e-breadcrumb-item>
            <e-breadcrumb-item text="@Localizer["Settings"].Value" url="/Account/Settings"></e-breadcrumb-item>
            <e-breadcrumb-item text="@Localizer["Password"].Value" url="/Account/Settings/Password"></e-breadcrumb-item>
        </e-breadcrumb-items>
    </ejs-breadcrumb>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="@Localizer["Old password placeholder"]" />
            <label asp-for="Input.OldPassword" class="form-label"></label>
            <span asp-validation-for="Input.OldPassword" class="text-danger d-block my-2"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Localizer["New password placeholder"]" />
            <label asp-for="Input.NewPassword" class="form-label"></label>
            <span asp-validation-for="Input.NewPassword" class="text-danger d-block my-2"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Localizer["Confirm new password placeholder"]" />
            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger d-block my-2"></span>
        </div>
        <button type="submit" class="w-100 btn btn-primary">@Localizer["Update password"]</button>
        @if (Model.StatusMessage != null) {
            <div class="alert alert-success mt-3" role="alert">
                @Model.StatusMessage
            </div>
        }
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
