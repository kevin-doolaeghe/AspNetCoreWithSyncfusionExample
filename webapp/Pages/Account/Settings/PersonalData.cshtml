@page
@model PersonalDataModel
@{
    ViewData["IsSettingsPage"] = true;
    ViewData["PageTitle"] = Localizer["Personal data"];
    ViewData["ActivePage"] = SettingsNavPages.PersonalData;
}

<div class="container">
    <ejs-breadcrumb id="breadcrumb" cssClass="my-3" enableNavigation="true" maxItems="3" overflowMode="Menu">
        <e-breadcrumb-items>
            <e-breadcrumb-item iconCss="e-icons e-home" url="/"></e-breadcrumb-item>
            <e-breadcrumb-item text="@Localizer["Settings"].Value" url="/Account/Settings"></e-breadcrumb-item>
            <e-breadcrumb-item text="@Localizer["Personal data"].Value" url="/Account/Settings/PersonalData"></e-breadcrumb-item>
        </e-breadcrumb-items>
    </ejs-breadcrumb>

    <div>
        <p>@Localizer["Personal data description"]</p>
        <p><strong>@Localizer["Deletion warning"]</strong></p>
    </div>
    <form asp-page="DownloadPersonalData" method="post">
        <div class="btn-group w-100">
            <button class="btn btn-primary" type="submit">
                @Localizer["Download"]
            </button>
            <a class="btn btn-danger" asp-page="DeletePersonalData">
                @Localizer["Delete"]
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
