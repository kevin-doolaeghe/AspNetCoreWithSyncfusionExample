@page
@using Syncfusion.EJ2.Charts;
@model webapp.Pages.IndexModel
@{
    ViewData["PageTitle"] = "Dashboard";

    var palettes = new string[] { "#509ED9", "#80D950", "#D45D48", "#FEC200", "#D97F3F", "#64B9C4", "#5848C2", "#C248BA", "#2C3BC7", "#C24883", "#0E9622", "#914C5E", "#12C96E", "#70AD47", "#5B9BD5", "#C1C1C1", "#6F6FE2", "#E269AE", "#9E480E", "#997300" };
    var cellSpacing = new double[] { 10, 10 };
}

<div class="text-center">

    <ejs-breadcrumb id="breadcrumb" cssClass="p-4" enableNavigation="true" maxItems="3" overflowMode="Menu">
        <e-breadcrumb-items>
            <e-breadcrumb-item iconCss="e-icons e-home" url="/"></e-breadcrumb-item>
            <e-breadcrumb-item text="Dashboard" url="/"></e-breadcrumb-item>
        </e-breadcrumb-items>
    </ejs-breadcrumb>

    <ejs-dashboardlayout id="editableLayout1" mediaQuery="max-width: 992px" columns="3" cellSpacing="cellSpacing" cellAspectRatio="2.5" allowDragging="false" allowResizing="false">
        <e-dashboardlayout-panels>
            <e-dashboardlayout-panel sizeX="1" sizeY="1" row="0" col="0">
                <e-content-template>
                    <div>

                        <div class="e-panel-container">
                            <div class="e-panel-header">
                                <div class="title">
                                    <i class="fa-solid fa-dollar-sign"></i> Current balance
                                </div>
                            </div>
                            <div class="e-panel-content">
                                <h1>@Model.CurrentBalance</h1>
                            </div>
                        </div>

                    </div>
                </e-content-template>
            </e-dashboardlayout-panel>

            <e-dashboardlayout-panel sizeX="1" sizeY="1" row="0" col="1">
                <e-content-template>
                    <div>

                        <div class="e-panel-container">
                            <div class="e-panel-header">
                                <div class="title">
                                    <i class="fa-solid fa-dollar-sign"></i> Real balance
                                </div>
                            </div>
                            <div class="e-panel-content">
                                <h1>@Model.RealBalance</h1>
                            </div>
                        </div>

                    </div>
                </e-content-template>
            </e-dashboardlayout-panel>

            <e-dashboardlayout-panel sizeX="1" sizeY="1" row="0" col="2">
                <e-content-template>
                    <div>

                        <div class="e-panel-container">
                            <div class="e-panel-header">
                                <div class="title">
                                    <i class="fa-solid fa-dollar-sign"></i> Cashflow
                                </div>
                            </div>
                            <div class="e-panel-content">
                                <h1>@Model.Cashflow</h1>
                            </div>
                        </div>

                    </div>
                </e-content-template>
            </e-dashboardlayout-panel>

            <e-dashboardlayout-panel sizeX="2" sizeY="3" row="1" col="0">
                <e-content-template>
                    <div>

                        @* Bar chart *@
                        <div class="e-panel-container" id="chart1">
                            <div class="e-panel-header">
                                <div class="title" id="header1">
                                    Transactions by status
                                </div>
                            </div>
                            <div class="e-panel-content">
                                <ejs-chart id="linechart" enableAnimation="true" width="100%" height="100%">
                                    <e-chart-tooltipsettings enable="true" shared="true" header="<b>Status</b>"></e-chart-tooltipsettings>
                                    <e-chart-legendsettings visible="true" enableHighlight="true"></e-chart-legendsettings>
                                    <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category" interval="1">
                                        <e-majorgridlines width="0"></e-majorgridlines>
                                        <e-majorticklines width="0"></e-majorticklines>
                                    </e-chart-primaryxaxis>
                                    <e-chart-primaryyaxis>
                                        <e-majorticklines width="0"></e-majorticklines>
                                        <e-linestyle width="0"></e-linestyle>
                                        <e-labelstyle size="11px"></e-labelstyle>
                                    </e-chart-primaryyaxis>
                                    <e-chart-chartarea>
                                        <e-chartarea-border width="0"></e-chartarea-border>
                                    </e-chart-chartarea>
                                    <e-series-collection>
                                        <e-series dataSource="Model.ColumnChartData1" xName="Period" yName="Value1" name="Pending" width="2" fill="#2485FA" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Column">
                                            <e-series-marker>
                                                <e-series-datalabel visible="true" position="@LabelPosition.Middle" template="<b>${point.y}</b>">
                                                    <e-font color="white"></e-font>
                                                </e-series-datalabel>
                                            </e-series-marker>
                                        </e-series>
                                        <e-series dataSource="Model.ColumnChartData1" xName="Period" yName="Value2" name="Closed" fill="#FEC200" width="2" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Column">
                                            <e-series-marker>
                                                <e-series-datalabel visible="true" position="@LabelPosition.Middle" template="<b>${point.y}</b>">
                                                    <e-font color="white"></e-font>
                                                </e-series-datalabel>
                                            </e-series-marker>
                                        </e-series>
                                    </e-series-collection>
                                </ejs-chart>
                            </div>
                        </div>

                    </div>
                </e-content-template>
            </e-dashboardlayout-panel>

            <e-dashboardlayout-panel sizeX="1" sizeY="3" row="1" col="2">
                <e-content-template>
                    <div>

                        @* Pie chart *@
                        <div class="e-panel-container" id="chart2">
                            <div class="e-panel-header">
                                <div class="title" id="header2">Expenses by category</div>
                            </div>
                            <div class="e-panel-content">
                                <ejs-accumulationchart id="pie" enableAnimation="true" enableBorderOnMouseMove="true" enableSmartLabels="true" width="100%" height="100%">
                                    <e-accumulationchart-tooltipsettings enable="true" format="${point.x} : <b>${point.y}€</b> - ${point.percentage}%"></e-accumulationchart-tooltipsettings>
                                    <e-accumulationchart-legendsettings position="Top" toggleVisibility="true">
                                        <e-legendsettings-textstyle size="1rem"></e-legendsettings-textstyle>
                                    </e-accumulationchart-legendsettings>
                                    <e-accumulation-series-collection>
                                        <e-accumulation-series tooltipMappingName="Description" dataSource="Model.PieChartData1" xName="Description" yName="Value" innerRadius="50%" legendShape="Circle" palettes="palettes">
                                            <e-accumulationseries-datalabel name="FormattedValue" visible="true" position="@AccumulationLabelPosition.Inside" textWrap="Wrap" template="<div><b>${point.y}€</b></div><div>${point.percentage}%</div>"></e-accumulationseries-datalabel>
                                        </e-accumulation-series>
                                    </e-accumulation-series-collection>
                                </ejs-accumulationchart>
                            </div>
                        </div>

                    </div>
                </e-content-template>
            </e-dashboardlayout-panel>

            <e-dashboardlayout-panel sizeX="2" sizeY="3" row="4" col="1">
                <e-content-template>
                    <div>

                        @* Spline chart *@
                        <div class="e-panel-container" id="chart3">
                            <div class="e-panel-header">
                                <div class="title" id="header3">Expenses vs income</div>
                            </div>
                            <div class="e-panel-content">
                                <ejs-chart id="spline" enableAnimation="true" width="100%" height="100%">
                                    <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category">
                                        <e-majorgridlines width="0"></e-majorgridlines>
                                        <e-majorticklines width="0"></e-majorticklines>
                                        <e-labelstyle size="11px"></e-labelstyle>
                                    </e-chart-primaryxaxis>
                                    <e-chart-primaryyaxis labelFormat="{value}€">
                                        <e-linestyle width="0"></e-linestyle>
                                        <e-majorticklines width="0"></e-majorticklines>
                                        <e-labelstyle size="11px"></e-labelstyle>
                                    </e-chart-primaryyaxis>
                                    <e-chart-tooltipsettings enable="true" shared="true" enableMarker="true"></e-chart-tooltipsettings>
                                    <e-chart-chartarea>
                                        <e-chartarea-border width="0"></e-chartarea-border>
                                    </e-chart-chartarea>
                                    <e-series-collection>
                                        <e-series dataSource="Model.SplineChartData1" fill="#509ED9" name="Balance" xName="Period" opacity="1" width="3.5" yName="Value1" type="@ChartSeriesType.Spline"></e-series>
                                        <e-series dataSource="Model.SplineChartData1" fill="#80D950" name="Income" xName="Period" opacity="1" width="3.5" yName="Value2" type="@ChartSeriesType.Spline"></e-series>
                                        <e-series dataSource="Model.SplineChartData1" fill="#D45D48" name="Expense" xName="Period" opacity="1" width="3.5" yName="Value3" type="@ChartSeriesType.Spline"></e-series>
                                    </e-series-collection>
                                    <e-chart-legendsettings enableHighlight="true"></e-chart-legendsettings>
                                </ejs-chart>
                            </div>
                        </div>

                    </div>
                </e-content-template>
            </e-dashboardlayout-panel>

            <e-dashboardlayout-panel sizeX="1" sizeY="3" row="4" col="0">
                <e-content-template>
                    <div>

                        <div class="e-panel-container">
                            <div class="e-panel-header">
                                <div class="title">
                                    <i class="fa-solid fa-dollar-sign"></i> Recent records
                                </div>
                            </div>
                            <div class="e-panel-content">
                                <ejs-grid id="recentTransactions" dataSource="@Model.RecentRecords" gridLines="None" width="100%" height="100%">
                                    <e-grid-columns>
                                        <e-grid-column headerText="Category" field="Category"></e-grid-column>
                                        <e-grid-column headerText="Date" field="Date" type="date" format="dd-MMM-yy"></e-grid-column>
                                        <e-grid-column headerText="Amount" field="FormattedAmount" textAlign="Right"></e-grid-column>
                                    </e-grid-columns>
                                </ejs-grid>
                            </div>
                        </div>

                    </div>
                </e-content-template>
            </e-dashboardlayout-panel>
        </e-dashboardlayout-panels>

    </ejs-dashboardlayout>

</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var lineObj = document.getElementById('linechart').ej2_instances[0];
        var pieObj = document.getElementById('pie').ej2_instances[0];
        var splineObj = document.getElementById('spline').ej2_instances[0];
        lineObj.refresh();
        pieObj.refresh();
        splineObj.refresh();
    });
</script>
